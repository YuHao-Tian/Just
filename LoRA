{
  "coco_detjson_train": {
    "file_name": "train2017_detjson_abs.jsonl",
    "formatting": "sharegpt",
    "columns": { "messages": "conversations" },
    "tags": { "role_tag": "from", "content_tag": "value", "user_tag": "user", "assistant_tag": "assistant" },
    "multi_modal": true,
    "image_field": "images",
    "image_column": "images"
  },
  "coco_detjson_val": {
    "file_name": "val2017_detjson_abs.jsonl",
    "formatting": "sharegpt",
    "columns": { "messages": "conversations" },
    "tags": { "role_tag": "from", "content_tag": "value", "user_tag": "user", "assistant_tag": "assistant" },
    "multi_modal": true,
    "image_field": "images",
    "image_column": "images"
  }
}

——————————————————————————————————————————————————
python - <<'PY'
import json, re, os, sys
bad = 0; total = 0
for p in ["/home/vipuser/lf_data/train2017_detjson_abs.jsonl",
          "/home/vipuser/lf_data/val2017_detjson_abs.jsonl"]:
    with open(p) as f:
        for line in f:
            total += 1
            o = json.loads(line)
            msgs = [c["value"] for c in o.get("conversations",[])]
            tokens = sum(len(re.findall(r"<image>", m)) for m in msgs)
            imgs = o.get("images", [])
            if tokens != len(imgs) or len(imgs)!=1 or not all(os.path.exists(x) for x in imgs):
                bad += 1
                if bad <= 5:
                    print("[BAD]", o.get("id"), "tokens=",tokens, "imgs=",len(imgs))
print("bad/total =", bad, "/", total)
PY

